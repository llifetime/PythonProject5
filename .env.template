# =============================================
# DATABASE CONFIGURATION
# =============================================

# Database name (SQLite)
DB_NAME=hh_vacancies.db

# Database path (optional, for other databases)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=postgres
# DB_PASSWORD=your_password_here


# =============================================
# HH.RU API CONFIGURATION
# =============================================

# Base URL for HH.ru API
HH_API_BASE_URL=https://api.hh.ru/

# API request timeout in seconds
HH_API_TIMEOUT=10

# Number of vacancies per page (max 100)
HH_API_PER_PAGE=100

# User Agent for API requests (optional)
# HH_USER_AGENT=YourAppName/1.0 (your-email@example.com)


# =============================================
# APPLICATION SETTINGS
# =============================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Maximum length for company descriptions
MAX_DESCRIPTION_LENGTH=500

# Default currency for salary display
DEFAULT_CURRENCY=руб.

# Enable/disable debug mode
DEBUG=False

# Language for API responses (ru, en)
API_LANGUAGE=ru


# =============================================
# DATA COLLECTION SETTINGS
# =============================================

# Default companies to analyze (HH.ru employer IDs)
COMPANY_IDS=15478,3529,1740,4181,3776,39305,87021,907345,1057,1122462

# Maximum number of vacancies to collect per company
MAX_VACANCIES_PER_COMPANY=500

# Delay between API requests in seconds (to avoid rate limiting)
API_REQUEST_DELAY=0.1


# =============================================
# SEARCH AND FILTER SETTINGS
# =============================================

# Default search keyword
DEFAULT_SEARCH_KEYWORD=python

# Minimum salary threshold for filtering (optional)
MIN_SALARY_THRESHOLD=50000

# Default number of results to display
RESULTS_LIMIT=10


# =============================================
# EXPORT SETTINGS
# =============================================

# Export format for reports (json, csv, both)
EXPORT_FORMAT=json

# Output directory for exports
EXPORT_DIR=exports

# Enable/disable automatic backups
ENABLE_BACKUPS=True